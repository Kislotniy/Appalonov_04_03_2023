<Window x:Class="Lopushok_421.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lopushok_421"
        mc:Ignorable="d"
        Icon="/products/logo.png"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="400" Width="600">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFCEFFF9"/>
                <GradientStop Color="#FF00CC76" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="BProd" Content="Products" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,150" Width="250" Height="30" Background="White" Click="BProd_Click"/>
        <Button Content="Agents" VerticalAlignment="Center" HorizontalAlignment="Center" Width="250" Height="30" Background="White" Click="Button_Click"/>
        <Button Content="Materials" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,-150" Width="250" Height="30" Background="White" Click="Button_Click_1"/>
    </Grid>
</Window>
